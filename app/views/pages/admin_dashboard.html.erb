<p id="notice"><%= notice %></p>

<h1>Admin Dashboard</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Bio</th>
      <th>Avatar</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.profile.name %></td>
        <td><%= user.profile.location %></td>
        <td><%= user.profile.bio %></td>
        <td><%= image_tag user.profile.avatar.url %></td>
        <td><%= user.profile.user.email %></td>
        <td><%= link_to 'Show', user.profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(user.profile) %></td>
        <td><%= link_to 'Destroy User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
