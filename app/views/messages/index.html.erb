<% if @over_ten %>
  <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<% @messages.each do |message| %>
  <% if message.user != nil %>
    <div class="card">
      <div class="content">
        <div class="header">
          <strong><%= message.user.profile.name %></strong>
        </div>

        <%= message.body %>
      </div>
    </div>
  <%  end %>
<% end %>


<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit "Add Reply", class: "button" %>
  </div>
<% end %>
